#sudo singularity build formation_bigr_cBioPortal_extraction.simg formation_bigr_cBioPortal_extraction.def
#using image:
#singularity shell -B local_folder:/WORKDIR/container_folder formation_bigr_cBioPortal_extraction.simg

%environment
    LANG=en_US.UTF-8
    LC_ALL=en_US.UTF-8
    LC_TIME=en_US.UTF-8
    LC_MONETARY=en_US.UTF-8
    LC_PAPER=en_US.UTF-8
    LC_MEASUREMENT=en_US.UTF-8

%post
    echo "Ubuntu version ######################"
    cat /etc/lsb-release
    apt-get -y update && apt-get -y upgrade
    
    ln -fs /usr/share/zoneinfo/Europe/Paris /etc/localtime
    apt-get install -y tzdata
    dpkg-reconfigure --frontend noninteractive tzdata
    apt-get install -y libssh2-1-dev wget libgit2-dev libcurl4-openssl-dev
    wget https://github.com/jgm/pandoc/releases/download/2.19.2/pandoc-2.19.2-1-amd64.deb
    dpkg -i pandoc-2.19.2-1-amd64.deb
    
    apt-get install -y dirmngr gnupg apt-transport-https ca-certificates software-properties-common
    apt-get -y update && apt-get -y upgrade
    apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys E298A3A825C0D65DFD57CBB651716619E084DAB9
    add-apt-repository 'deb https://cloud.r-project.org/bin/linux/ubuntu jammy-cran40/'
    apt-get -y update && apt-get -y upgrade
    apt-get install -y r-base-core r-base-dev
    apt-cache policy r-base r-base-dev
    
    echo "R version ######################"
    R --version

    echo "Install R packages ######################"

    R -e 'install.packages("remotes")'
    R -e 'library("remotes")'
    R -e 'install.packages("git2r")'
    R -e 'library("git2r")'
    R -e 'install.packages("rmarkdown")'
    R -e 'library("rmarkdown")'   
    R -e 'remotes::install_git("https://gitlab.com/bioinfo_gustaveroussy/bigr/rmdformatsbigr.git",
             credentials=git2r::cred_user_pass("your_login", "your_password"))'
    R -e 'install.packages("dplyr")'
    R -e 'library("dplyr")'
    R -e 'install.packages("tidyr")'
    R -e 'library("tidyr")'
    R -e 'install.packages("httr")'
    R -e 'library("httr")'
    R -e 'install.packages("jsonlite")'
    R -e 'library("jsonlite")'
    R -e 'install.packages("ggplot2")'
    R -e 'library("ggplot2")'
    R -e 'install.packages("cbioportalR")'
    R -e 'library("cbioportalR")'

%labels
    Author Marine AGLAVE
